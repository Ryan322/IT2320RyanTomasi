@model MVCMusicStoreApplication.Models.ViewModels.ShoppingCartViewModel

@{
    ViewBag.Title = "ShoppingCart";
}

@section Scripts
{
    <scripts src="~/Scripts/Apps/MusicStoreScript.js"></scripts>
}

<h2>Here's your shopping cart!</h2>
<br/>
<div id="update-message"></div>
<div>
    <table>
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Quantity</th>
            <th></th>
        </tr>
    @foreach (var items in Model.CartItems)
    {
        <tr id="record-@items.RecordId">
            <td>@items.AlbumSelected.Title</td>
            <td>@items.AlbumSelected.Price</td>
            <td id="item-count-@items.RecordId">@items.Count</td> <!--items or item?-->
            <td><a href="#" class="RemoveLink" data-id="@items.RecordId">Remove</a></td>
        </tr>
    }
        <tr>
            <td>Cart Total</td>
            <td></td>
            <td></td>
            <td id="cart-total">@Model.CartTotal</td>
        </tr>
    </table>
</div>
<p class="button">
    @Html.ActionLink("Back to Browse", "Browse", "Store")    
</p>
